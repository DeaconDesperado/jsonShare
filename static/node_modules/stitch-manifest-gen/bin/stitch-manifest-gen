#!/usr/bin/env node

'use strict';

var fs = require('fs');
var main = require('../main.js');

main.computeManifest('.', function(error, manifest) {
  if (error) throw error;
  fs.writeFile('manifest.json', JSON.stringify(manifest, null, 2), {encoding: 'utf8'}, function(error) {
    if (error) throw error;
    console.log('manifest.json generated');
  });
});
